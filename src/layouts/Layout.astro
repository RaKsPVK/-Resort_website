---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Green Hills Resort - Your Perfect Getaway" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col bg-fixed bg-cover bg-center" style="background-image: url('/public/resort-image.jpeg');">
		<div class="bg-black/40 fixed inset-0 -z-10"></div>
		<Header />
		<main class="flex-grow backdrop-blur-sm">
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--accent: 212, 175, 55;
		--accent-light: 250, 232, 175;
		--accent-dark: 101, 67, 33;
	}
	html {
		font-family: system-ui, sans-serif;
		color: #ffffff;
	}
</style>