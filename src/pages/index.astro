---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Green Hills Resort - Your Perfect Getaway">
    <div class="relative h-[600px] bg-black/10 backdrop-blur-sm">
        <div class="absolute inset-0 flex items-center justify-center text-center">
            <div class="text-white max-w-4xl px-4">
                <h1 class="text-5xl md:text-6xl font-bold mb-6">Welcome to Green Hills Resort</h1>
                <p class="text-xl md:text-2xl">Your Perfect Getaway</p>
            </div>
        </div>
    </div>

    <!-- Our Rooms Section with Slider -->
    <section class="py-16 px-4">
        <div class="max-w-6xl mx-auto">
            <h2 class="text-3xl font-bold text-center mb-12">Our Rooms</h2>
            <div class="relative overflow-hidden">
                <div class="flex items-center justify-between">
                    <button id="prevSlide" class="p-2 bg-white text-black rounded-full">&#10094;</button>
                    <div class="flex overflow-x-auto space-x-4 scrollbar-hide" id="roomSlider">
                        <img src="/public/room1.svg" alt="Room 1" class="w-1/3 h-64 object-cover rounded-lg" />
                        <img src="/public/room2.svg" alt="Room 2" class="w-1/3 h-64 object-cover rounded-lg" />
                        <img src="/public/room3.svg" alt="Room 3" class="w-1/3 h-64 object-cover rounded-lg" />
                    </div>
                    <button id="nextSlide" class="p-2 bg-white text-black rounded-full">&#10095;</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Swimming Pool Section -->
    <section class="py-16 flex justify-center">
        <div class="max-w-4xl">
            <h2 class="text-3xl font-bold text-center mb-8">Our Swimming Pool</h2>
            <img src="/public/pool.svg" alt="Swimming Pool" class="w-full h-auto rounded-lg shadow-lg" />
        </div>
    </section>

    <!-- Google Maps Section -->
    <section class="py-16 flex justify-center">
        <div class="max-w-4xl text-center">
            <h2 class="text-3xl font-bold mb-8">Find Us</h2>
            <a href="https://maps.app.goo.gl/66tZriY5eyC94G2S8" target="_blank">
                <img src="/public/map.svg" alt="Resort Location" class="w-full h-auto rounded-lg shadow-lg cursor-pointer hover:opacity-80" />
            </a>
        </div>
    </section>
</Layout>

<!-- Swiper.js for Image Slider -->
<script>
    const slider = document.getElementById('roomSlider');
    const prevButton = document.getElementById('prevSlide');
    const nextButton = document.getElementById('nextSlide');

    nextButton.addEventListener('click', () => {
        slider.scrollBy({ left: 300, behavior: 'smooth' });
    });

    prevButton.addEventListener('click', () => {
        slider.scrollBy({ left: -300, behavior: 'smooth' });
    });
</script>

<!-- Include Swiper.js Styles -->
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
